<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/pm_irfan"
        android:id="@+id/imageView5"
        android:layout_weight="0.06" />

    <TextView
        android:layout_marginTop="20dp"
        android:text="IRFAN ZAKARIA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="17sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_weight="0.06" />

    <TextView
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        android:text="Born: June 4, 1995 (age 22), Malaysia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_weight="0.04" />


    <TextView
        android:textColor="#000000"
        android:text="Height: 5′ 11″"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_weight="0.04" />

    <TextView
        android:textColor="#000000"
        android:text="Weight: 148 lbs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_weight="0.04" />

    <TextView
        android:textColor="#000000"
        android:text="Number: 17"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_weight="0.04" />

    <TextView
        android:textColor="#000000"
        android:text="Current team: Kuala Lumpur "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_weight="0.04" />

    <TextView
        android:textColor="#000000"
        android:text="Playing position: Defender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_weight="0.04" />

</LinearLayout>