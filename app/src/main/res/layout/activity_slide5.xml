<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_slide5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:orientation="vertical"
    tools:context="com.khairulcreation.activityslider.slide5">

    <ImageView
        android:layout_width="match_parent"
        app:srcCompat="@drawable/pm_adibzainudin"
        android:id="@+id/imageView"
        android:layout_weight="0.06"
        android:layout_height="241dp" />

    <TextView
        android:layout_marginTop="20dp"
        android:text="ADIB ZAINUDIN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="17sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_weight="0.06" />

    <TextView
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        android:text="Born: February 15, 1995 (age 22), Johor, Malaysia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_weight="0.04" />


    <TextView
        android:textColor="#000000"
        android:text="Height: 5′ 11″"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_weight="0.04" />

    <TextView
        android:textColor="#000000"
        android:text="Weight: 159 lbs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_weight="0.04" />

    <TextView
        android:textColor="#000000"
        android:text="Number: 28"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_weight="0.04" />

    <TextView
        android:textColor="#000000"
        android:text="Current team: Felcra F.C. "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_weight="0.04" />

    <TextView
        android:textColor="#000000"
        android:text="Playing position: Defender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_weight="0.04" />


</LinearLayout>
