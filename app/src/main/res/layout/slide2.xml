<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="241dp"
        app:srcCompat="@drawable/pm_ifwat"
        android:id="@+id/imageView4"
        android:layout_weight="0.06" />

    <TextView
        android:layout_marginTop="20dp"
        android:text="MOHD IFWAT AKMAL CHE KASSIM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="17sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_weight="0.06" />

    <TextView
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        android:text="Born: Aug 10, 1996 (age 21), Kedah, Malaysia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_weight="0.04" />


    <TextView
        android:textColor="#000000"
        android:text="Height: 6′ 11″"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_weight="0.04" />

    <TextView
        android:textColor="#000000"
        android:text="Weight: 186 lbs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_weight="0.04" />

    <TextView
        android:textColor="#000000"
        android:text="Number: 1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_weight="0.04" />

    <TextView
        android:textColor="#000000"
        android:text="Current team: Kedah FA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_weight="0.04" />

    <TextView
        android:textColor="#000000"
        android:text="Playing position: Goalkeeper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_weight="0.04" />

</LinearLayout>